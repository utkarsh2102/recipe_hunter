source 'https://rubygems.org'

gem 'rails', '~> 5.2'
gem 'sass-rails', '~> 6.0'
gem 'uglifier', '~> 4.2.0'
gem 'coffee-rails', '~> 5.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.10'
gem 'sdoc', '~> 1.1', group: :doc

group :development, :test do
  gem 'byebug'
end

group :test do
  gem 'rspec-rails'
  gem 'rspec', '~> 3.9.0'
  gem 'capybara'
  gem 'capybara-selenium'
  gem 'webdrivers', '~> 4.4.1'
end

group :production do
  gem 'pg', '~> 0.20.0'
  gem 'rails_12factor'
end

group :development do
  gem 'web-console', '~> 3.7'
  gem 'spring'
  gem 'sqlite3', '~> 1.4.2'
end

gem 'httparty'

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

gem 'webmock'

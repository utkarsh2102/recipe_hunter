<h1>Recipes for <%= @search %></h1>

<% if @recipes.nil? %>

  <p>No recipes found, sorry!</p>

<% else %>

  <table border="1">
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Ingredients</th>
    </tr>

    <tr><% @recipes.each do |recipe| %>
      <td><%= link_to (image_tag(recipe["thumbnail"])), recipe["href"] %></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["href"] %></td>
      <td><%= recipe["ingredients"] %></td>
    </tr><% end %>
  </table>

<% end %>
